# ===========================================
# Sistema de Gestión de Subvenciones
# Variables de Entorno
# ===========================================

# Entorno
NODE_ENV=development

# Backend
BACKEND_PORT=4000
BACKEND_URL=http://localhost:4000

# Frontend
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000

# Base de datos PostgreSQL
DATABASE_URL=postgresql://subvenciones:subvenciones_password@postgres:5432/subvenciones_db?schema=public
POSTGRES_USER=subvenciones
POSTGRES_PASSWORD=subvenciones_password
POSTGRES_DB=subvenciones_db

# Redis
REDIS_URL=redis://redis:6379

# JWT
JWT_SECRET=cambiar_en_produccion_min_64_caracteres_aleatorios_seguros_12345678901234
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Sesiones
SESSION_SECRET=cambiar_en_produccion_otra_clave_secreta_diferente_64_caracteres_min

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Archivos
MAX_FILE_SIZE_MB=10
UPLOAD_PATH=/app/uploads
ALLOWED_MIME_TYPES=application/pdf,image/jpeg,image/png,image/jpg

# Contraseñas
PASSWORD_MIN_LENGTH=10
PASSWORD_HISTORY_COUNT=5
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# MFA
MFA_ISSUER=SistemaSubvenciones
MFA_REQUIRED_ROLES=DIRECTORA,ORDENADOR_GASTO,CRI,DIGER

# Email (opcional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=notificaciones@example.com
SMTP_PASSWORD=smtp_password
EMAIL_FROM=Sistema de Subvenciones <noreply@example.com>

# Logs
LOG_LEVEL=info
LOG_FORMAT=json

# CORS
CORS_ORIGIN=http://localhost:3000

# Encryption para documentos sensibles
ENCRYPTION_KEY=32_bytes_key_for_aes_256_encrypt

# PDF Generation
PDF_COMPANY_NAME=Entidad Gubernamental
PDF_COMPANY_ADDRESS=Dirección de la Entidad
