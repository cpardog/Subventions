# Entorno
NODE_ENV=development

# Backend
BACKEND_PORT=4000
BACKEND_URL=http://localhost:4000

# Frontend
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000
VITE_API_URL=http://localhost:4000

# Base de datos PostgreSQL
# Para Docker Compose, usar postgres:5432
# Para desarrollo local, cambiar a localhost:5432
DATABASE_URL=postgresql://subvenciones:subvenciones_password@postgres:5432/subvenciones_db?schema=public
POSTGRES_USER=subvenciones
POSTGRES_PASSWORD=subvenciones_password
POSTGRES_DB=subvenciones_db

# Redis
# Para Docker Compose, usar redis:6379
# Para desarrollo local, cambiar a localhost:6379
REDIS_URL=redis://redis:6379

# JWT
JWT_SECRET=desarrollo_clave_secreta_muy_larga_solo_para_testing_local_no_usar_en_produccion
JWT_REFRESH_SECRET=desarrollo_refresh_secret_muy_largo_solo_para_testing_local_12345678901234
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Sesiones
SESSION_SECRET=desarrollo_session_secret_solo_para_testing_local_no_usar_produccion

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Archivos
MAX_FILE_SIZE_MB=10
UPLOAD_PATH=./uploads
ALLOWED_MIME_TYPES=application/pdf,image/jpeg,image/png,image/jpg

# Contraseñas
PASSWORD_MIN_LENGTH=10
PASSWORD_HISTORY_COUNT=5
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# MFA
MFA_ISSUER=SistemaSubvenciones
MFA_REQUIRED_ROLES=DIRECTORA,ORDENADOR_GASTO,CRI,DIGER

# Logs
LOG_LEVEL=debug
LOG_FORMAT=pretty

# CORS
CORS_ORIGIN=http://localhost:3000

# Encryption
ENCRYPTION_KEY=32_bytes_key_for_aes_256_encrypt

# PDF
PDF_COMPANY_NAME=Sistema de Subvenciones
PDF_COMPANY_ADDRESS=Dirección de la Entidad
